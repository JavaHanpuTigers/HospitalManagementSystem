 /* 卡片样式 */
 
 .text {
     font-size: 20px;
     font-weight: bold;
 }
 
 .item {
     margin-bottom: 18px;
     font-weight: bold;
 }
 
 .clearfix:before,
 .clearfix:after {
     display: table;
     content: " ";
 }
 
 .clearfix:after {
     clear: both;
 }
 
 .box-card {
     width: 80%;
     height: 600px;
     margin: auto;
 }
 /* 导航菜单背景样式 */
 
 .head-bdc {
     opacity: 0.8;
     margin-left: -20px;
     margin-top: -100px;
     padding-top: 80px;
     padding-left: 20px;
     height: 800px;
     width: 18%;
     background-color: #1a6b94;
     position: relative;
 }
 
 .head-title {
     margin-top: -40px;
     margin-bottom: 18px;
 }
 /*  主体内容样式*/
 
 .body-content {
     width: 90%;
     margin: 0px auto;
     /* background-color: hotpink; */
 }
 
 .el-collapse-item__header {
     background-color: #1a6b94;
 }
 
 .el-collapse-item__content {
     background-color: #1a6b94;
 }